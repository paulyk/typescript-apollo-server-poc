{
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "es2021",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    }
}